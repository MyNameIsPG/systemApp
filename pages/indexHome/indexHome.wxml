            <!-- circular="true" -->
                <swiper previous-margin="60rpx" next-margin="60rpx" current="1" circular="true" style="width: 100%; height: 100%;">
                    <block wx:for="{{imgUrls}}" wx:for-item="item" wx:index="index">
