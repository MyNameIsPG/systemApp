<view class="__indexHome">
    <view class="bgBanner"></view>

    <view class="bgBannerBox">
        <image src="../image/banner.png"></image>
    </view>

    <view class="btnAreaBg">
        <view class="iconList" wx:for="{{btnAreaData}}" wx:key="index" wx:for-item="item" bindtap="clickIndexView" data-item-path="{{item.path}}" data-item-title="{{item.name}}">
            <image src="{{item.imgurl}}"></image>
            <text>{{item.name}}</text>
        </view>
    </view>
    
