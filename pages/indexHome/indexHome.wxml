                                    <view class="tip">
                                        <view class="name">
                                            <image src="../image/userName.png"></image>
                                            <text>张三</text>
                                        </view>
                                        <view class="view">
                                            <image src="../image/userView.png"></image>
                                            <text>1511</text>
                                        </view>
                                    </view>
                                </view>
                            </view>
                        </swiper-item>
                    </block>
                </swiper>
            </view>
        </view>
    </view>
    
